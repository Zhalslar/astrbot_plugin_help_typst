{
  "rendering": {
    "description": "渲染引擎设置",
    "type": "object",
    "items": {
      "timeout_analysis": {
        "description": "数据分析超时 (秒)",
        "type": "float",
        "slider": {
          "min": 3,
          "max": 30,
          "step": 1
        },
        "default": 10.0,
        "hint": "生成数据结构的超时时间，根据插件数量调整"
      },
      "timeout_compile": {
        "description": "Typst 编译超时 (秒)",
        "type": "float",
        "slider": {
          "min": 3,
          "max": 60,
          "step": 1
        },
        "default": 30.0,
        "hint": "调用 Typst 编译图片的超时时间，根据其他项目调整"
      },
      "max_concurrent_tasks": {
        "description": "最大并发编译数",
        "type": "int",
        "slider": {
          "min": 1,
          "max": 10,
          "step": 1
        },
        "default": 2,
        "hint": "同时进行的 Typst 编译任务数量限制，根据 CPU 调整"
      },
      "ppi": {
        "description": "图片清晰度 (PPI)",
        "type": "float",
        "slider": {
          "min": 64,
          "max": 256,
          "step": 1
        },
        "default": 144.0,
        "hint": "越高图片越清晰，但越慢&大&高占用，根据内存 & 带宽调整"
      },
      "giant_threshold": {
        "description": "巨型块阈值 (pt)",
        "type": "int",
        "slider": {
          "min": 100,
          "max": 3000,
          "step": 100
        },
        "default": 1500,
        "hint": "超过此高度的插件将独占一行显示 (仅 Event/Filter 模式有效)"
      },
      "split_height": {
        "description": "长图切分高度 (px)",
        "type": "int",
        "slider": {
          "min": 1000,
          "max": 30000,
          "step": 1000
        },
        "default": 16000,
        "hint": "当图片高度超过 WebP 限制时的切分单位高度"
      },
      "webp_limit": {
        "description": "WebP 限制",
        "type": "int",
        "slider": {
          "min": 0,
          "max": 30000,
          "step": 1
        },
        "default": 16383
      }
    }
  },
  "ignored_plugins": {
    "description": "黑名单插件",
    "type": "list",
    "default": [
      "astrbot",
      "astrbot-web-searcher",
      "astrbot-python-interpreter",
      "session_controller",
      "builtin_commands",
      "astrbot-reminder",
      "astrbot_plugin_help_typst"
    ],
    "hint": "屏蔽不想展示、导致问题的插件菜单"
  },
  "send_hint": {
    "description": "是否发送提示",
    "type": "bool",
    "default": true,
    "hint": "打开后，每次打开插件菜单时都会发送提示语给用户"
  }
}